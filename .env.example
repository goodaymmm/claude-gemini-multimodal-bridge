# ===================================
# Claude-Gemini Multimodal Bridge Configuration
# ===================================

# Authentication Configuration (OPTIONAL)
# Choose ONE authentication method for each service:

# Gemini Authentication
# Method 1: OAuth (RECOMMENDED) - Run: gemini auth
# Method 2: API Key (ALTERNATIVE) - Set below if OAuth not available
GEMINI_API_KEY=your_gemini_api_key_here_optional

# Claude Authentication  
# Claude Code requires separate authentication (run: claude auth)
# API key only needed if using Claude API directly (optional)
CLAUDE_API_KEY=your_claude_api_key_here_optional

# Layer Configuration
CLAUDE_CODE_PATH=/usr/local/bin/claude
GEMINI_CLI_PATH=/usr/local/bin/gemini
AISTUDIO_MCP_ENABLED=true

# Gemini CLI Configuration
GEMINI_MODEL=gemini-2.5-pro
GEMINI_TIMEOUT=60000
GEMINI_MAX_OUTPUT_TOKENS=16384
GEMINI_TEMPERATURE=0.2
GEMINI_MAX_FILES=10
GEMINI_MAX_TOTAL_FILE_SIZE=100

# Performance Settings
ENABLE_CACHING=true
CACHE_TTL=3600
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=300000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/cgmb.log
ENABLE_DEBUG_LOGGING=false
VERBOSE_LOGGING=false

# Layer Priority Settings (claude|gemini|aistudio|adaptive)
DEFAULT_LAYER_PRIORITY=adaptive
FALLBACK_STRATEGY=graceful

# Security Settings
TRUST_AISTUDIO_MCP=true
TRUST_GEMINI_CLI=true
TRUST_CLAUDE_CODE=true

# Development Settings
NODE_ENV=development
ENABLE_MOCK_LAYERS=false
DISABLE_RATE_LIMITING=false

# File Processing Settings
TEMP_DIR=/tmp/cgmb
MAX_FILE_SIZE=100MB
SUPPORTED_FORMATS=pdf,png,jpg,jpeg,mp3,wav,doc,docx,txt,md

# MCP Server Settings
MCP_SERVER_PORT=3000
MCP_SERVER_HOST=localhost
MCP_TRANSPORT=stdio

# Error Handling
MAX_RETRIES=3
RETRY_DELAY=1000
ENABLE_CIRCUIT_BREAKER=true

# Workflow Settings
DEFAULT_EXECUTION_MODE=adaptive
ENABLE_PARALLEL_PROCESSING=true
WORKFLOW_TIMEOUT=600000