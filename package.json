{
  "name": "claude-gemini-multimodal-bridge",
  "version": "1.0.1",
  "description": "Production-ready multi-layer AI integration bridge with performance optimizations, intelligent caching, prompt optimization, and seamless MCP integration for Claude Code, Gemini CLI, and Google AI Studio",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "cgmb": "dist/cli.js"
  },
  "mcp": {
    "name": "cgmb",
    "description": "Claude-Gemini Multimodal Bridge - Multi-layer AI integration with custom AI Studio MCP server",
    "version": "1.0.1",
    "command": "cgmb",
    "args": ["serve"],
    "servers": {
      "ai-studio": {
        "description": "Custom AI Studio MCP server for image generation and multimodal processing",
        "command": "node",
        "args": ["dist/mcp-servers/ai-studio-mcp-server.js"]
      }
    }
  },
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js",
    "dev": "tsx src/index.ts",
    "start": "cgmb serve",
    "serve": "cgmb serve",
    "setup": "./scripts/setup.sh",
    "verify": "./scripts/verify-dependencies.sh",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "test:unit": "echo \"Unit tests not yet implemented\" && exit 0",
    "test:integration": "npm run verify && cgmb test",
    "benchmark": "node scripts/benchmark.js",
    "clean": "rimraf dist",
    "prepublish": "npm run clean && npm run build",
    "postinstall": "node scripts/postinstall.cjs",
    "demo:android": "node examples/android_monetization.js",
    "demo:gemini": "node examples/gemini_search_demo.js",
    "demo:aistudio": "node examples/aistudio_image_demo.js",
    "demo:all": "npm run demo:android && npm run demo:gemini && npm run demo:aistudio",
    "mcp:aistudio": "node dist/mcp-servers/ai-studio-mcp-server.js",
    "mcp:test": "AI_STUDIO_API_KEY=test node dist/mcp-servers/ai-studio-mcp-server.js"
  },
  "keywords": [
    "claude",
    "gemini", 
    "mcp",
    "multimodal",
    "ai-integration",
    "workflow-automation",
    "bridge",
    "performance-optimization",
    "intelligent-caching",
    "prompt-optimization",
    "claude-code",
    "gemini-cli",
    "google-ai-studio",
    "ai-cli",
    "multimodal-ai",
    "model-context-protocol",
    "ai-orchestration",
    "direct-api-integration",
    "production-ready",
    "search-cache",
    "adaptive-timeouts",
    "parallel-processing"
  ],
  "author": "goodaymmm",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/goodaymmm/claude-gemini-multimodal-bridge"
  },
  "bugs": {
    "url": "https://github.com/goodaymmm/claude-gemini-multimodal-bridge/issues"
  },
  "homepage": "https://github.com/goodaymmm/claude-gemini-multimodal-bridge#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@google/generative-ai": "^0.24.1",
    "ansi-escapes": "^7.0.0",
    "zod": "^3.22.0",
    "winston": "^3.11.0",
    "node-cache": "^5.1.2",
    "async-retry": "^1.3.3",
    "dotenv": "^16.3.1",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "rimraf": "^5.0.0"
  },
  "optionalDependencies": {
    "@google/gemini-cli": "*"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "docs",
    "examples",
    "scripts/postinstall.cjs",
    ".env.example"
  ]
}