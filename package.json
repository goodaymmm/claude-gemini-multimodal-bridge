{
  "name": "claude-gemini-multimodal-bridge",
  "version": "1.0.0",
  "description": "Multi-layer AI integration bridge connecting Claude Code, Gemini CLI, and Google AI Studio for advanced multimodal processing",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "cgmb": "dist/cli.js"
  },
  "mcp": {
    "name": "cgmb",
    "description": "Claude-Gemini Multimodal Bridge - Multi-layer AI integration",
    "version": "1.0.0",
    "command": "cgmb",
    "args": ["serve"]
  },
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js",
    "dev": "tsx src/index.ts",
    "start": "cgmb serve",
    "serve": "cgmb serve",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "setup": "./scripts/setup.sh",
    "verify": "./scripts/verify-dependencies.sh",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "prepublish": "npm run clean && npm run build",
    "postinstall": "node scripts/postinstall.cjs"
  },
  "keywords": [
    "claude",
    "gemini", 
    "mcp",
    "multimodal",
    "ai-integration",
    "workflow-automation",
    "bridge",
    "claude-code",
    "gemini-cli",
    "google-ai-studio"
  ],
  "author": "goodaymmm",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/goodaymmm/claude-gemini-multimodal-bridge"
  },
  "bugs": {
    "url": "https://github.com/goodaymmm/claude-gemini-multimodal-bridge/issues"
  },
  "homepage": "https://github.com/goodaymmm/claude-gemini-multimodal-bridge#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.22.0",
    "winston": "^3.11.0",
    "node-cache": "^5.1.2",
    "async-retry": "^1.3.3",
    "dotenv": "^16.3.1",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.0",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "rimraf": "^5.0.0"
  },
  "optionalDependencies": {
    "aistudio-mcp-server": "^1.0.0",
    "@google/gemini-cli": "*"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "docs"
  ]
}